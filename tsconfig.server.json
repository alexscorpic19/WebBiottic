{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "dist/server",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "strict": true,
    "noEmit": false,
    "declaration": true
  },
  "include": [
    "src/server/**/*", 
    "src/shared/**/*",
    "src/config/**/*"  // Añadido para incluir los archivos de configuración
  ],
  "exclude": ["src/client/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
