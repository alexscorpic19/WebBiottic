{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist/server",
    "rootDir": "src",
    "types": ["node"],
    "target": "ESNext"
  },
  "include": [
    "src/server/**/*",
    "src/config/**/*",
    "src/types/**/*"
  ],
  "exclude": ["node_modules"]
}
